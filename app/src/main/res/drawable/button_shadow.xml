<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/purple_700"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item
                android:bottom="7px" android:right="6dp"
                >
                <shape>
                    <padding android:bottom="7dp" android:right="6dp"/>
                    <gradient
                        android:startColor="@color/purple_500"
                        android:endColor="@color/purple_500"
                        android:angle="270" />
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="20dp"
                        android:top="5dp"
                        android:right="20dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>