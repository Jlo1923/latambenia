<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SemillaViva" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SemillaViva.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--TextViews-->
    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/textView</item>
    </style>

    <!--TextInputEditText-->
    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <!--<item name="backgroundTint">?attr/colorSecondary</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_shadow</item>
        <item name="android:height">30dp</item>
    </style>
    <style name="Theme.SemillaViva.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SemillaViva.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>